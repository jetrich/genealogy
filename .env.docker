# Docker Environment Configuration for Laravel Genealogy Application
# ===================================================================

# Application
APP_NAME="Genealogy"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

# Localization
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

# Maintenance
APP_MAINTENANCE_DRIVER=file
APP_MAINTENANCE_STORE=database

# Security
BCRYPT_ROUNDS=12

# Logging
LOG_CHANNEL=daily
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database Configuration (Docker services)
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=genealogy
DB_USERNAME=genealogy_user
DB_PASSWORD=genealogy_password

# Session Configuration (Redis-based for scalability)
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

# Broadcasting
BROADCAST_CONNECTION=log

# Filesystem
FILESYSTEM_DISK=local

# Queue Configuration (Redis-based for genealogy processing)
QUEUE_CONNECTION=redis

# Cache Configuration (Redis-based for performance)
CACHE_STORE=redis
CACHE_PREFIX=genealogy

# Memcached (not used, Redis preferred)
MEMCACHED_HOST=127.0.0.1

# Redis Configuration (Docker service)
REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail Configuration (development)
MAIL_MAILER=log
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@genealogy.local"
MAIL_FROM_NAME="${APP_NAME}"

# AWS (for production file storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Vite
VITE_APP_NAME="${APP_NAME}"

# --------------------------------------------------------
# Genealogy Application Custom Settings
# --------------------------------------------------------

# Backup Configuration
BACKUP_DISK="backups"
BACKUP_DAILY_CLEANUP="22:30"
BACKUP_DAILY_RUN="23:00"
BACKUP_MAIL_ADDRESS="admin@genealogy.local"
BACKUP_DUMP_PATH="/var/www/html/storage/app/backups"

# File Upload Limits (for genealogy photos and GEDCOM files)
MAX_UPLOAD_SIZE=64
MAX_PHOTO_SIZE=32
MAX_GEDCOM_SIZE=128

# Genealogy Processing
GEDCOM_PROCESSING_TIMEOUT=300
PHOTO_PROCESSING_TIMEOUT=60
FAMILY_TREE_CACHE_TTL=3600

# Development Tools (Docker-specific)
DEBUGBAR_ENABLED=true
TELESCOPE_ENABLED=false

# Docker Service Monitoring
DOCKER_HEALTH_CHECK_INTERVAL=30
DOCKER_RESTART_POLICY=unless-stopped